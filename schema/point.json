{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://geojson.org/schema/Point.json",
  "$comment": "Local copy http://geojson.org/schema/Point.json, because of Mixed-Content (http-https) errors",
  "title": "GeoJSON Point",
  "type": "object",
  "required": [
    "type",
    "coordinates"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "Point"
      ]
    },
    "coordinates": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "number"
      }
    },
    "bbox": {
      "title": "The boundingbox (optional)",
      "type": "array",
      "minItems": 4,
      "items": {
        "type": "number"
      }
    }
  }
}
