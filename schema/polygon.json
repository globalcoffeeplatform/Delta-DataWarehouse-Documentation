{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://geojson.org/schema/Polygon.json",
  "$comment": "Local copy http://geojson.org/schema/Polygon.json, because of Mixed-Content (http-https) errors",
  "title": "GeoJSON Polygon",
  "type": "object",
  "required": [
    "type",
    "coordinates"
  ],
  "properties": {
    "type": {
      "type": "string",
      "enum": [
        "Polygon"
      ]
    },
    "coordinates": {
      "type": "array",
      "minItems": 4,
      "items": {
        "type": "array",
        "minItems": 2,
        "items": {
          "type": "number"
        }
      }
    }
  },
  "bbox": {
    "title": "The boundingbox (optional)",
    "type": "array",
    "minItems": 4,
    "items": {
      "type": "number"
    }
  }
}